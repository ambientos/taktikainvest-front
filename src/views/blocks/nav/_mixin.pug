mixin nav(type)
	- var _type = type ? ' _' + type : '';

	nav(class='navbar navbar-expand-lg'+ _type)
		.container
			.d-flex.d-lg-none.justify-content-end
				button.navbar-toggler(
					type='button'
					data-toggle='collapse'
					data-target='#navbarSupportedContent'
					aria-controls='navbarSupportedContent'
					aria-expanded='false'
					aria-label='Toggle navigation')
					span.navbar-toggler-icon

			.collapse.navbar-collapse.justify-content-between.show-control#navbarSupportedContent
				+menu([{title: 'О компании'}, {title: 'Арендный бизнес'}, {title: 'Коммерческая недвижимость', items: ['Офисы', 'Торговые площади', 'Склады/Производство']}, {title: 'Услуги'}, {title: 'Вакансии'}, {title: 'Контакты'}], 'navbar-nav' + _type)

				include ./_social.pug